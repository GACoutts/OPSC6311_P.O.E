<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Category Spinner -->
    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Budget Display -->

    <!-- Number Pad (Grid-style using Guideline references) -->
    <!-- Row 1 -->
    <TextView
        android:id="@+id/budget_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/budget_display_bg"
        android:gravity="end"
        android:padding="16dp"
        android:text="0"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_spinner" />

    <Button
        android:id="@+id/button_1"
        android:text="1"
        style="@style/NumberPadButton"
        app:layout_constraintTop_toBottomOf="@id/budget_display"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_2"
        android:text="2"
        style="@style/NumberPadButton"
        app:layout_constraintTop_toTopOf="@id/button_1"
        app:layout_constraintStart_toEndOf="@id/button_1" />

    <Button
        android:id="@+id/button_3"
        android:text="3"
        style="@style/NumberPadButton"
        app:layout_constraintTop_toTopOf="@id/button_1"
        app:layout_constraintStart_toEndOf="@id/button_2" />

    <!-- Row 2 -->
    <Button
        android:id="@+id/button_4"
        android:text="4"
        style="@style/NumberPadButton"
        app:layout_constraintTop_toBottomOf="@id/button_1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_5"
        android:text="5"
        style="@style/NumberPadButton"
        app:layout_constraintTop_toTopOf="@id/button_4"
        app:layout_constraintStart_toEndOf="@id/button_4" />

    <Button
        android:id="@+id/button_6"
        android:text="6"
        style="@style/NumberPadButton"
        app:layout_constraintTop_toTopOf="@id/button_4"
        app:layout_constraintStart_toEndOf="@id/button_5" />

    <!-- Row 3 -->
    <Button
        android:id="@+id/button_7"
        android:text="7"
        style="@style/NumberPadButton"
        app:layout_constraintTop_toBottomOf="@id/button_4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_8"
        android:text="8"
        style="@style/NumberPadButton"
        app:layout_constraintTop_toTopOf="@id/button_7"
        app:layout_constraintStart_toEndOf="@id/button_7" />

    <Button
        android:id="@+id/button_9"
        android:text="9"
        style="@style/NumberPadButton"
        app:layout_constraintTop_toTopOf="@id/button_7"
        app:layout_constraintStart_toEndOf="@id/button_8" />

    <!-- Row 4 -->
    <Button
        android:id="@+id/button_dot"
        android:text="."
        style="@style/NumberPadButton"
        app:layout_constraintTop_toBottomOf="@id/button_7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_0"
        android:text="0"
        style="@style/NumberPadButton"
        app:layout_constraintTop_toTopOf="@id/button_dot"
        app:layout_constraintStart_toEndOf="@id/button_dot" />

    <Button
        android:id="@+id/button_backspace"
        android:text="âŒ«"
        style="@style/NumberPadButton"
        app:layout_constraintTop_toTopOf="@id/button_dot"
        app:layout_constraintStart_toEndOf="@id/button_0" />

    <!-- Action Buttons -->
    <Button
        android:id="@+id/button_income"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Income"
        app:layout_constraintTop_toBottomOf="@id/button_dot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_expense"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button_expense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Expense"
        app:layout_constraintTop_toTopOf="@id/button_income"
        app:layout_constraintStart_toEndOf="@id/button_income"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
