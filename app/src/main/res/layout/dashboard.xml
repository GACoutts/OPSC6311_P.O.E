<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <!-- Top Summary Bar with 3 TextViews -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTotalAllTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="All Time: 0"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvTotal7Days"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33" />

        <TextView
            android:id="@+id/tvTotal7Days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="7 Days: 0"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/tvTotalAllTime"
            app:layout_constraintEnd_toStartOf="@+id/tvTotal30Days"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.34" />

        <TextView
            android:id="@+id/tvTotal30Days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="30 Days: 0"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/tvTotal7Days"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.33" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Add Button -->
    <Button
        android:id="@+id/btnAddEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/topSummary"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp" />

    <!-- RecyclerView for Entries -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEntries"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAddEntry"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Footer (Customizable) -->
    <View
        android:id="@+id/footerTopBorder"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#e3e3e3"
        app:layout_constraintBottom_toTopOf="@id/footerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="8dp"
        android:gravity="center"
        android:weightSum="4"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Footer Item 1 -->
        <ImageButton
            android:id="@+id/footerHome"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/home"
            android:scaleType="centerInside"
            android:contentDescription="Home" />

        <!-- Footer Item 2 -->
        <ImageButton
            android:id="@+id/footerCalender"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/calender"
            android:scaleType="centerInside"
            android:contentDescription="Calendar" />

        <!-- Footer Item 3 -->
        <ImageButton
            android:id="@+id/footerGraph"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/graph"
            android:scaleType="centerInside"
            android:contentDescription="Graph" />

        <!-- Footer Item 4 -->
        <ImageButton
            android:id="@+id/footerBudget"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/money"
            android:scaleType="centerInside"
            android:contentDescription="Profile" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
