<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    >
    <!-- Top Summary Section -->
    <RelativeLayout
        android:id="@+id/summarySection"
        android:layout_width="0dp"
        android:layout_height="79dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Income Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_income"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/incomeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_positive_amount"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@color/green"
                    />

            </LinearLayout>

            <!-- Expense Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_expense"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/expenseValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_positive_amount"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    />
            </LinearLayout>

            <!-- Total Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_total"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/totalValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_positive_amount"
                    android:textAlignment="center"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- Calendar -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/summarySection"
        app:layout_constraintBottom_toTopOf="@id/filterSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_max="310dp" />

    <!-- Filter section -->
    <LinearLayout
        android:id="@+id/filterSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_filter"
            android:textSize="16sp"
            />
    </LinearLayout>

    <!-- Modal Button -->
    <Button
        android:id="@+id/openModalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint_filter_by"
        app:layout_constraintTop_toBottomOf="@id/filterSection"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"
        android:backgroundTint="@color/blue"
        android:textColor="@android:color/white" />

    <!-- Showing Results for -->
    <TextView
        android:id="@+id/showingResultsDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results for: 1 June 2025"
        android:textSize="16sp"
        android:textColor="@color/grey"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <!-- Footer -->
    <include
        android:id="@+id/footer"
        layout="@layout/footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
